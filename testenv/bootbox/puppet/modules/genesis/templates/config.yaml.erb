:ntp_server: <%= @ntp_server %>
:virident:
    :base_url: http://<%= @file_service %>/it
    :firmware: vgc-firmware-redhat6-3.1.1-51287.C6.tar.gz
    :v3_firmware: vgc-firmware-v3.tar.gz
    :v2_firmware: vgc-firmware-v2.tar.gz
    :v1_firmware: vgc-firmware-v1.tar.gz
